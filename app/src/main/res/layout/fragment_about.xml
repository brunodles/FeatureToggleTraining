<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    >

    <ImageView
      android:id="@+id/devimageback"
      android:layout_width="0dp"
      android:layout_height="128dp"
      android:contentDescription="User Image background"
      android:scaleType="fitXY"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_launcher_background"
      />

    <ImageView
      android:id="@+id/devimage"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      android:contentDescription="User Image foreground"
      android:scaleType="center"
      android:tint="@android:color/white"
      app:layout_constraintBottom_toBottomOf="@+id/devimageback"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_adb_black_24dp"
      />

    <TextView
      android:id="@+id/devname"
      style="@style/TextAppearance.AppCompat.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:text="Imagine um Nome Aqui"
      app:layout_constraintTop_toBottomOf="@+id/devimageback"
      />

    <TextView
      android:id="@+id/devbio"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:text="Talk about your life here. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet mauris tortor. Phasellus commodo massa sed sem tincidunt, at ullamcorper tellus cursus. Sed neque velit, fringilla a felis et, fermentum sollicitudin libero. Vivamus et urna nisi. Etiam sollicitudin sollicitudin dolor, nec pharetra augue sollicitudin vel. Suspendisse scelerisque, arcu non malesuada cursus, lectus sem euismod metus, et pulvinar felis tortor et est. Cras lacinia velit sed libero sollicitudin, eget vehicula nunc consequat. Cras est nibh, auctor nec varius non, mollis eget arcu. Suspendisse eu mauris sed dolor consectetur cursus. Phasellus id odio in dolor rutrum sagittis laoreet non massa. Sed lobortis mollis tristique. Donec vel ultrices dolor. Fusce interdum eros nec placerat ornare."
      app:layout_constraintTop_toBottomOf="@+id/devname"
      />

  </android.support.constraint.ConstraintLayout>
</ScrollView>